# Environment-specific configurations for CI/CD

# Development Environment
DEV_NAMESPACE=development
DEV_REPLICAS=1
DEV_RESOURCES_REQUESTS_CPU=50m
DEV_RESOURCES_REQUESTS_MEMORY=64Mi
DEV_RESOURCES_LIMITS_CPU=100m
DEV_RESOURCES_LIMITS_MEMORY=128Mi

# Staging Environment  
STAGING_NAMESPACE=staging
STAGING_REPLICAS=2
STAGING_RESOURCES_REQUESTS_CPU=100m
STAGING_RESOURCES_REQUESTS_MEMORY=128Mi
STAGING_RESOURCES_LIMITS_CPU=200m
STAGING_RESOURCES_LIMITS_MEMORY=256Mi

# Production Environment
PROD_NAMESPACE=production
PROD_REPLICAS=3
PROD_RESOURCES_REQUESTS_CPU=200m
PROD_RESOURCES_REQUESTS_MEMORY=256Mi
PROD_RESOURCES_LIMITS_CPU=500m
PROD_RESOURCES_LIMITS_MEMORY=512Mi

# HPA Configuration
PROD_HPA_MIN_REPLICAS=3
PROD_HPA_MAX_REPLICAS=20
PROD_HPA_CPU_THRESHOLD=70

# Image Configuration
DOCKER_REGISTRY=docker.io
IMAGE_NAME=ecom-web

# Health Check Configuration
HEALTH_CHECK_PATH=/health.php
HEALTH_CHECK_PORT=80
READINESS_INITIAL_DELAY=5
LIVENESS_INITIAL_DELAY=30
